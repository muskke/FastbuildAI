{
    "name": "@buildingai/upgrade",
    "version": "0.0.0",
    "private": true,
    "license": "MIT",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./*": {
            "types": "./dist/*.d.ts",
            "import": "./dist/*.js",
            "require": "./dist/*.js"
        }
    },
    "scripts": {
        "clean": "rimraf dist .turbo tsconfig.tsbuildinfo",
        "check-types": "tsc --noEmit",
        "build": "rimraf dist && tsc -p tsconfig.build.json && pnpm run copy:scripts",
        "copy:scripts": "cpy 'src/scripts/**/*.json' 'src/scripts/**/*.md' 'src/scripts/**/*.txt' dist/scripts --parents",
        "dev": "tsc -p tsconfig.build.json --watch",
        "format": "biome format --write .",
        "format:check": "biome ci .",
        "lint": "eslint . --quiet",
        "lint:fix": "eslint . --fix",
        "watch": "tsc -p tsconfig.build.json --watch",
        "test": "jest",
        "test:dev": "jest --watch"
    },
    "dependencies": {
        "@buildingai/db": "workspace:*",
        "@buildingai/logger": "workspace:*"
    },
    "devDependencies": {
        "@buildingai/eslint-config": "workspace:*",
        "@buildingai/typescript-config": "workspace:*"
    }
}