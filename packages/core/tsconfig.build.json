{
    "extends": [
        "./tsconfig.json",
        "@buildingai/typescript-config/build.json"
    ],
    "compilerOptions": {
        "composite": true,
        "rootDir": "src",
        "outDir": "dist",
        "tsBuildInfoFile": "dist/build.tsbuildinfo",
        "types": [
            "node",
            "multer"
        ]
    },
    "include": [
        "src/**/*.ts",
        "global.d.ts"
    ],
    "exclude": [
        "src/**/__tests__/**"
    ]
}